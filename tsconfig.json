{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "noLib": true,
        "strict": true,
        "target": "es6",
        "types": [
            "rbx-types"
        ],
        // required, configurable
        "rootDir": "src",
        "outDir": "out",
        // optional
        "baseUrl": "src",
        "declaration": true
        // optional, non-configurable
    },
    "typeAcquisition": {
        "enable": true
    }
}